mixin photo-description(obj)
    section(class="photo-description")
        if (data.framework !== "without-framework")
            div(class="photo-description__content " + obj.container)
                include ../../_blocks/product/product.pug
                +product({
                    row: obj.row,
                    cols: obj.cols,
                    boxText: "photo-description__block-text",
                    boxImage: "photo-description__block-img",
                })(class="photo-descirption__content")
                +product({
                    row: obj.row,
                    cols: obj.cols,
                    boxText: "photo-description__block-text",
                    boxImage: "photo-description__block-img",
                })(class="product--reverse photo-descirption__content photo-description__content--reverse")

        else
            include ../../_blocks/product/product.pug
            +product({
                row: "photo-description__row",
                boxText: "photo-description__block-text",
                boxImage: "photo-description__block-img",
            })
            +product({
                row: "photo-description__row",
                boxText: "photo-description__block-text",
                boxImage: "photo-description__block-img",
            })(class="product--reverse")

    !="\n"

    // END .photo-descirption
