mixin products-preview(obj)
    section(class="products-preview")
        div(class="box")
            div(class="grid-container fluid")
                include ../../product-preview/product-preview.pug
                +product-preview({
                    cols: ["large-5 medium-6 small-12", "large-7 medium-6 small-12"],
                    img: "product-1",
                    format: "png",
                    color: "blue"
                })(class="grid-x products-preview__item")
                +product-preview({
                    cols: ["large-5 medium-6 small-12", "large-7 medium-6 small-12"],
                    img: "product-2",
                    format: "png",
                    color: "blue"
                })(class="grid-x products-preview__item product-preview--reverse")
    !="\n"

    // END .products-preview
