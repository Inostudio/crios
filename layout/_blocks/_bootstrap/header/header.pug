mixin header(obj)
    header(class="header")
        div(class="box")
            div(class="container")
                div(class="row header__row")
                    div(class="col-xl-3 col-lg-3 col-md-2 col-sm-2")
                        include ../nav/nav.pug
                        +nav(["Home", "About"])

                    div(class="col-xl-6 col-lg-6 col-md-8 col-sm-8")
                        include ../../logo/logo.pug
                        +logo()

                    div(class="col-xl-3 col-lg-3 col-md-2 col-sm-12 header__search")
                        include ../../search/search.pug
                        +search()
    !="\n"

    // END .header
